script
  == "window.__regulation_json = #{workbasket_settings.settings.to_json};"

= simple_form_for form, url: create_regulation_url(id: workbasket.id),
                        html: { \
                          class: "regulation-form create-measures-v2", \
                          method: :put, data: {\
                            measure: form.measure.to_json \
                          } \
                        } do |f|

  = render "workbaskets/create_regulation/steps/#{params[:step].to_s}", f: f
  = render "workbaskets/shared/success_message", f: f
  = render "workbaskets/shared/errors_container", f: f

  = render "workbaskets/shared/action_links", f: f
