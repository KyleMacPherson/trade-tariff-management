<%= simple_form_for :search, url: search_measures_path, html: {method: :post} do |f| %>
  <p>
    <strong>
      Find additional codes where:
    </strong>
  </p>

  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[workbasket_name][enabled]" id="toggle-workbasket-name" type="checkbox" value="1" v-model="workbasket_name.enabled" />
        <label for="toggle-group-name">
          Workbasket name
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForWorbasketName" label-field="label" value-field="value"  v-model="workbasket_name.operator" name="search[workbasket_name][operator]"></custom-select>
    </div>
    <div class="find-item__long">
      <input name="search[workbasket_name][value]" class="form-control" v-model="workbasket_name.value" />
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[type][enabled]" id="toggle-type" type="checkbox" value="1" v-model="type.enabled" />
        <label for="toggle-type">
          Type
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForType" label-field="label" value-field="value"  v-model="type.operator" name="search[type][operator]"></custom-select>
    </div>
    <div class="find-item__short">
      <custom-select url="/additional_code_types" code-field="additional_code_type_id" label-field="description" value-field="additional_code_type_id" code-class-name="prefix--additional-code-type"  placeholder="― start typing ―" min-length="1" v-model="type.value" name="search[type][value]"></custom-select>
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[code][enabled]" id="toggle-code" type="checkbox" value="1" v-model="code.enabled" />
        <label for="toggle-code">
          Code
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForCode" label-field="label" value-field="value"  v-model="code.operator" name="search[code][operator]"></custom-select>
    </div>
    <div class="find-item__tiny">
      <input name="search[code][value]" class="form-control" v-model="code.value" v-bind:disabled="codeValueDisabled" />
    </div>
  </div>

  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[validity_start_date][enabled]" id="toggle-validity-start-date" type="checkbox" value="1" v-model="validity_start_date.enabled" />
        <label for="toggle-validity-start-date">
          Valid from
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForValidityStartDate" label-field="label" value-field="value"  v-model="validity_start_date.operator" name="search[validity_start_date][operator]"></custom-select>
    </div>
    <div class="find-item__date">
      <date-select :value.sync="validity_start_date.value" name="search[validity_start_date][value]" v-bind:disabled="validityStartDateValueDisabled" />
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[validity_end_date][enabled]" id="toggle-validity-end-date" type="checkbox" value="1" v-model="validity_end_date.enabled" />
        <label for="toggle-validity-end-date">
          Valid to
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForValidityEndDate" label-field="label" value-field="value"  v-model="validity_end_date.operator" name="search[validity_end_date][operator]"></custom-select>
    </div>
    <div class="find-item__date">
      <date-select :value.sync="validity_end_date.value" name="search[validity_end_date][value]" v-bind:disabled="validityEndDateValueDisabled" />
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[description][enabled]" id="toggle-description" type="checkbox" value="1" v-model="description.enabled" />
        <label for="toggle-description">
          Description
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForDescription" label-field="label" value-field="value"  v-model="description.operator" name="search[description][operator]"></custom-select>
    </div>
    <div class="find-item__short">
      <input name="search[description][value]" class="form-control" v-model="description.value" v-bind:disabled="descriptionValueDisabled" />
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[status][enabled]" id="toggle-status" type="checkbox" value="1" v-model="status.enabled" />
        <label for="toggle-status">
          Status
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForStatus" label-field="label" value-field="value"  v-model="status.operator"  name="search[status][operator]"></custom-select>
    </div>
    <div class="find-item__long">
      <custom-select :options="statuses" label-field="label" value-field="value" placeholder="― select a status ―" v-model="status.value" name="search[status][value]"></custom-select>
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[author][enabled]" id="toggle-author" type="checkbox" value="1" v-model="author.enabled" />
        <label for="toggle-author">
          Author
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForAuthor" label-field="label" value-field="value"  v-model="author.operator" name="search[author][operator]"></custom-select>
    </div>
    <div class="find-item__long">
      <custom-select url="/users" label-field="name" value-field="id" placeholder="― select a user ―" v-model="author.value" name="search[author][value]"></custom-select>
    </div>
  </div>
  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[date_of][enabled]" id="toggle-date" type="checkbox" value="1" v-model="date_of.enabled" />
        <label for="toggle-date">
          Date of
        </label>
      </div>
    </div>
    <div class="find-items__type">
      <custom-select :options="typesForDate" label-field="label" value-field="value"  v-model="date_of.mode" name="search[date_of][mode]"></custom-select>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForDate" label-field="label" value-field="value"  v-model="date_of.operator" name="search[date_of][operator]"></custom-select>
    </div>
    <div class="find-item__date">
      <date-select :value.sync="date_of.value" name="search[date_of][value]" />
    </div>
  </div>

  <div class="find-items__row">
    <div class="find-items__checkbox-column">
      <div class="multiple-choice">
        <input name="search[last_updated_by][enabled]" id="toggle-last-updated-by" type="checkbox" value="1" v-model="last_updated_by.enabled" />
        <label for="toggle-last-updated-by">
          Last updated by
        </label>
      </div>
    </div>
    <div class="find-items__is">
      <custom-select :options="conditionsForLastUpdatedBy" label-field="label" value-field="value"  v-model="last_updated_by.operator" name="search[last_updated_by][operator]"></custom-select>
    </div>
    <div class="find-item__long">
      <custom-select url="/users" label-field="name" value-field="id" placeholder="― select a user ―" v-model="last_updated_by.value" name="search[last_updated_by][value]"></custom-select>
    </div>
  </div>

  <div class="form-actions">
    <button type="submit" class='button' data-disable-with='Searching'>
      Search
    </button>

    <%= link_to "Clear", measures_url, class: "secondary-button" %>
  </div>
<% end %>
