  .geographical-area-type
    .multiple-choice
      input type='radio' :id="radioID" class="radio-inline-group" name="geographical_area_type" :checked="origin.selected"

      label :for="radioID" v-if="countryTypeSelected"
        | A country

      label :for="radioID" v-if="regionTypeSelected"
        | A region

      label :for="radioID" v-if="groupTypeSelected"
        | A group

    .panel.panel-border-narrow v-if="groupTypeSelected"
      label.form-label
        | Optionally a parent for this group

      .exclusions-target
          .exclusion-select
            = content_tag "custom-select", "", { ":options" => "origin.list", "label-field" => "description", "code-field" => "geographical_area_id", "value-field" => "geographical_area_id", "placeholder": "― select group ―", "min-length" => 1, "v-model" => "geographical_area_id", class: "origin-select", "code-class-name" => "prefix--country", "@change-value" => "changeExclusion" }

